
<ItemLabel@Label>
    font_size: '25sp'
    halign: 'center'
    valign: 'middle'


<Container>:
    BoxLayout:
        padding: [5, 0, 5, 0]
        orientation:'vertical'

        BoxLayout:
            size_hint: 1, 0.1

            Image:
                source: 'air_bank2.png'

            MDSpinner:
                size_hint: None, None
                size: dp(46), dp(46)
                pos_hint: {'center_x': .5, 'center_y': .5}
                active: True if check.active else False

            MDCheckbox:
                id: check
                size_hint: None, None
                size: dp(48), dp(48)
                pos_hint: {'center_x': .5, 'center_y': .4}
                active: True
            #md_bg_color: .2, .2, .2, 1
            #specific_text_color: 1, 1, 1, 1

        MDBottomNavigation:
            panel_color: .2, .2, .2, 1

            MDBottomNavigationItem:
                name: 'screen 1'
                text: 'Můj účet'
                icon: 'credit-card'

                FloatLayout:
                    rows: 2
                    AsyncImage:
                        source: 'https://bezpecnost.app/cs/ccs.png'
                        size_hint: 1, 1.5

                    BoxLayout:
                        orientation: 'vertical'
                        padding: [5, 0, 5, 0]
                        size_hint: 1, 0.5
                        #FitImage:
                            #size_hint_y: 3
                            #source: 'qr.png'


                        AsyncImage:
                            source: 'https://bezpecnost.app/cs/info.png'
                            size_hint: 1, 1


            #md_bg_color: .#2, .2, .2, 1
            #specific_text_color: 1, 1, 1, 1

            MDBottomNavigationItem:
                name: 'screen 2'
                text: 'Rezervovat QR'
                icon: 'qrcode-scan'

                BoxLayout:
                    padding: [0, 0, 0, 35]
                    orientation: 'vertical'
                    Carousel:
